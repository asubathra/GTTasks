package org.sample;

import java.io.File;
import java.io.IOException;

import org.apache.commons.io.FileUtils;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;



public class Screen {

	public static void main(String[] args) throws IOException {
		System.setProperty("webdriver.chrome.driver", "D:\\SubathraSpace\\eclipse-workspace\\Screenshot\\Driver\\chromedriver.exe");
		WebDriver dr = new ChromeDriver();
		dr.manage().window().maximize();
		dr.get("https://www.facebook.com/");
		
		TakesScreenshot ts =(TakesScreenshot)dr;
	
		File ss = ts.getScreenshotAs(OutputType.FILE);
		
		File dest = new File("D:\\SubathraSpace\\eclipse-workspace\\Screenshot\\Screenshot\\fb.png");
		
	  
		FileUtils.copyDirectory(ss, dest);
	}
}
